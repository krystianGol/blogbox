<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style/style.css">
    <title>BlogBox</title>
</head>

<body>
    <div class="container">
        <div class="header">
            <h1 id="app-name-header">BlogBox</h1>
            <button type="button" class="btn btn-success" onclick="window.location.href = '/new'">New Post</button>
            <hr />
        </div>
        <% if (locals.posts) { %>
            <ul id="posts-list">
                <% posts.forEach(post=> { %>
                    <li>
                        <div class="post-container">
                            <h2 id="post-title">
                                <%=post.title %>
                            </h2>
                            <p id="post-date">
                                <%=post.date %>
                            </p>
                            <p id="post-content">
                                <%=post.content %>
                            </p>
                            <p id="post-author">
                                <%=post.author %>
                            </p>
                            <div class="edit-delete-btn-container">
                                <button type="button" class="btn btn-primary"
                                    onclick="window.location.href = '/edit'">Edit</button>
                                <button type="button" class="btn btn-danger">Delete</button>
                                </form>
                                <hr />
                            </div>
                        </div>
                    </li>
                    <% }); %>
            </ul>
            <% } else { %>
                <p>Error</p>
                <% } %>
    </div>
</body>

</html>